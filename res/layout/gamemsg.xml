<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RadioGroup
        android:id="@+id/radioGroupGameMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checkedButton="@+id/otherMsg" >

        <RadioButton
            android:id="@+id/introMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hi, good game !"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/endMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thank you for the game !"
            android:textColor="#ffffff" />

        <RadioButton
            android:id="@+id/otherMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Other:"
            android:textColor="#ffffff" />
    </RadioGroup>

    <EditText
        android:id="@+id/textOtherMsg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="" />

</LinearLayout>